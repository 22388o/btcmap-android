<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowActionBar">false</item>

        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>

    <style name="AppTheme.SearchActivity" parent="AppTheme">
        <item name="colorPrimaryDark">#B3B3B3</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="suggestionRowLayout">@layout/list_item_search_suggestion</item>
    </style>

    <style name="AppTheme.TransparentStatusBar" parent="AppTheme" />

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/primary</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="SearchToolbar" parent="Toolbar.WithBackNavigation">
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/SearchToolbarTheme</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <style name="SearchToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">#757575</item>
        <item name="android:textColorSecondary">#757575</item>
    </style>

    <style name="Toolbar.WithBackNavigation" parent="Toolbar">
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

    <style name="Toolbar.SemiTransparent" parent="Toolbar">
        <item name="android:background">@color/primary_semi_transparent</item>
    </style>

    <style name="Toolbar.SemiTransparent.WithBackNavigation" parent="Toolbar.SemiTransparent">
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

</resources>