<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignBottom="@+id/header"
                    android:layout_alignTop="@+id/header"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pattern" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignBottom="@+id/header"
                    android:layout_alignTop="@+id/header"
                    android:background="#11000000" />

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/drawer_header_padding">

                        <ImageView
                            android:id="@+id/avatar"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/bitcoin_logo" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="16dp"
                                android:text="$300.00"
                                android:textColor="@color/white"
                                android:textSize="26sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.bubelov.coins.ui.widget.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/bitcoin_price"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:typeface="medium" />

                    <com.bubelov.coins.ui.widget.TypefaceTextView
                        android:id="@+id/price_last_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:typeface="regular"
                        tools:text="Checked 15 minutes ago" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_refresh_white_24dp" />

            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginBottom="8dp" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_all_merchants_grey600_24dp"
                app:text="@string/menu_item_all_merchants" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/atms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_atm_grey600_24dp"
                app:text="@string/menu_item_atms" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/cafes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_cafe_grey600_24dp"
                app:text="@string/menu_item_cafes" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/restaurants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_restaurant_grey600_24dp"
                app:text="@string/menu_item_restaurants" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/bars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_bar_grey600_24dp"
                app:text="@string/menu_item_bars" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/hotels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_hotel_grey600_24dp"
                app:text="@string/menu_item_hotels" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/car_washes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_car_wash_grey600_24dp"
                app:text="@string/menu_item_car_washes" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/gas_stations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_gas_station_grey600_24dp"
                app:text="@string/menu_item_gas_stations" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/hospitals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_hospital_grey600_24dp"
                app:text="@string/menu_item_hospitals" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/laundry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_laundry_service_grey600_24dp"
                app:text="@string/menu_item_laundry_services" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/movies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_movies_grey600_24dp"
                app:text="@string/menu_item_movies" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/parking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_parking_grey600_24dp"
                app:text="@string/menu_item_parking" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/pharmacies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_local_pharmacy_grey600_24dp"
                app:text="@string/menu_item_pharmacies" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/pizza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_local_pizza_grey600_24dp"
                app:text="@string/menu_item_pizza" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/taxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_taxi_grey600_24dp"
                app:text="@string/menu_item_taxi" />

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/drawer_divider" />

    <com.bubelov.coins.ui.widget.MenuItem
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mi_icon="@drawable/ic_settings_grey600_24dp"
        app:text="@string/menu_item_settings" />

    <com.bubelov.coins.ui.widget.MenuItem
        android:id="@+id/help_and_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mi_icon="@drawable/ic_help_grey600_24dp"
        app:text="@string/menu_item_help_and_feedback" />

</LinearLayout>