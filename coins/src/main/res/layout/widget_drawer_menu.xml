<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignTop="@+id/header"
                    android:layout_alignBottom="@+id/header"
                    android:src="@drawable/abstract_pattern"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignTop="@+id/header"
                    android:layout_alignBottom="@+id/header"
                    android:background="#33000000" />

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/avatar"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/bitcoin_logo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="16dp"
                            android:text="$300.00"
                            android:textColor="@color/white"
                            android:textSize="26sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Bitcoin price"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last check: 14:45 PM"
                        android:textSize="14sp"
                        android:textColor="@color/white" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="@color/divider" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_store_mall_directory_grey600_24dp"
                app:text="All" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/atms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_atm_grey600_24dp"
                app:text="ATMs" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/cafes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_cafe_grey600_24dp"
                app:text="Cafes" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/restaurants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_restaurant_grey600_24dp"
                app:text="Restaurants" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/bars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_bar_grey600_24dp"
                app:text="Bars" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/hotels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_hotel_grey600_24dp"
                app:text="Hotels" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/car_washes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_car_wash_grey600_24dp"
                app:text="Car washes" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/gas_stations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_gas_station_grey600_24dp"
                app:text="Gas stations" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/hospitals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_hospital_grey600_24dp"
                app:text="Hospitals" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/laundry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_laundry_service_grey600_24dp"
                app:text="Laundry services" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/movies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_movies_grey600_24dp"
                app:text="Movies" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/parking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_parking_grey600_24dp"
                app:text="Parking" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/pharmacies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_pharmacy_grey600_24dp"
                app:text="Pharmacies" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/pizza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_pizza_grey600_24dp"
                app:text="Pizza" />

            <com.bubelov.coins.ui.widget.MenuItem
                android:id="@+id/taxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mi_icon="@drawable/ic_local_taxi_grey600_24dp"
                app:text="Taxi" />

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/drawer_divider" />

    <com.bubelov.coins.ui.widget.MenuItem
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mi_icon="@drawable/ic_settings_grey600_24dp"
        app:text="Settings" />

    <com.bubelov.coins.ui.widget.MenuItem
        android:id="@+id/help_and_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mi_icon="@drawable/ic_help_grey600_24dp"
        app:text="Help &amp; feedback" />

</LinearLayout>