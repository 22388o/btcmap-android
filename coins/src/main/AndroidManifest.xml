<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bubelov.coins"
    android:installLocation="auto">

    <permission
        android:name="com.bubelov.coins.permission.READ"
        android:label="Read Coins data" />

    <permission
        android:name="com.bubelov.coins.permission.WRITE"
        android:label="Write Coins data" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:supportsRtl="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.activity.MapActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.MapActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".ui.activity.SettingsActivity"
            android:label="@string/sa_title"
            android:parentActivityName=".ui.activity.MapActivity" />

        <activity
            android:name=".ui.activity.SelectAreaActivity"
            android:label="Location"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.activity.FeedbackActivity"
            android:label="@string/fa_title"
            android:parentActivityName=".ui.activity.MapActivity" />

        <activity
            android:name=".ui.activity.MerchantsSearchActivity"
            android:label=""
            android:theme="@style/AppTheme.SearchActivity"
            android:windowSoftInputMode="stateVisible" />

        <service android:name=".service.sync.merchants.DatabaseSyncService" />

        <service android:name=".service.rates.ExchangeRatesService" />

        <provider
            android:name=".provider.CoinsProvider"
            android:authorities="com.bubelov.coins"
            android:readPermission="com.bubelov.coins.permission.READ"
            android:writePermission="com.bubelov.coins.permission.WRITE">

            <path-permission
                android:pathPrefix="/search_suggest_query"
                android:readPermission="android.permission.GLOBAL_SEARCH" />

        </provider>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="5471d91384b3af13f6be10b2083e5a3625fe6019" />

    </application>

</manifest>