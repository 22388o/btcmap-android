<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="actionBarTheme">@style/ToolbarTheme</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SearchActivity" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">#B3B3B3</item>
    </style>

    <style name="AppTheme.MapActivity" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/primary</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="SearchToolbar" parent="Toolbar.WithBackNavigation">
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/SearchToolbarTheme</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="SearchToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">#757575</item>
        <item name="android:textColorSecondary">#757575</item>
    </style>

    <style name="Toolbar.WithBackNavigation" parent="Toolbar">
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

    <style name="Toolbar.SemiTransparent" parent="Toolbar">
        <item name="android:background">@color/primary_semi_transparent</item>
        <item name="android:elevation" tools:targetApi="lollipop">1dp</item>
    </style>

    <style name="Toolbar.SemiTransparent.WithBackNavigation" parent="Toolbar.SemiTransparent">
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

</resources>